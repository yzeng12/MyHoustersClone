<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpassword.ForgotPasswordActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewForgotPasswordIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="57dp"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/housters"
        android:layout_gravity="center"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutForgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewIcon">

        <com.example.yzeng.myhoustersclone.ui_and_other.EditTextWithClear
            android:id="@+id/editTextForgotpasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/email"

            />


    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/buttonForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@color/colorPrimary"
        android:text="@string/forgotpassword"
        android:textColor="#fff"
         />
</LinearLayout>