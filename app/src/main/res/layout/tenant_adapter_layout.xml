<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#e8e7e7"
        app:cardCornerRadius="@dimen/small_size"
        app:cardElevation="@dimen/small_size"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_productimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo_tenant" />

            <LinearLayout
                android:background="#eff2ef"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:id="@+id/tv_tenantname"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="tenant name "
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/tv_tenant_propertyid"
                    android:paddingLeft="10dp"
                    android:text="tenant propertyid"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp">

                </View>
                <TextView
                    android:id="@+id/tv_tenant_mobile"
                    android:paddingLeft="10dp"
                    android:text="tenant mobile"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </View>

                <TextView
                    android:id="@+id/tv_tenant_email"
                    android:paddingLeft="10dp"
                    android:text="tenant emaill"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                </View>

                <TextView
                    android:id="@+id/tv_tenant_address"
                    android:paddingLeft="10dp"
                    android:text="tenant address"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>