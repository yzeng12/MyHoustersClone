<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_20sp"
            android:text="Task info"
            android:textStyle="bold|italic"
            android:paddingStart="@dimen/small_size"
            android:background="#b3b3b3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_20sp"
            android:text="Prority"

            android:paddingStart="@dimen/small_size"

            />
        <Spinner
            android:id="@+id/sp_Todo_Priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:gravity="center_horizontal"
            >

        </Spinner>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Todo_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="summary"
            android:padding="@dimen/medium_size"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Todo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="description"
            android:padding="@dimen/medium_size"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Todo_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="property"
            android:padding="@dimen/medium_size"
            />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/tv_todolist_date"
            android:padding="@dimen/medium_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="select_departure_date"
            android:textSize="@dimen/medium_size"

            android:drawableRight="@drawable/ic_calender"/>

        <ImageView
            android:id="@+id/iv_todolist_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_size"

            android:layout_marginTop="@dimen/small_size"
            android:maxHeight="400dp"
            android:maxWidth="400dp"
            />
        <Button
            android:id="@+id/btn_todolist_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a picture"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="@dimen/small_size"
            android:layout_margin="@dimen/small_size"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_20sp"
            android:text="Cost and Vendor info"
            android:textStyle="bold|italic"
            android:paddingStart="@dimen/small_size"
            android:background="#b3b3b3"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Todo_Vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Assign to Vendor"
            android:padding="@dimen/medium_size"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Todo_estimate_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="estimate cost"
            android:padding="@dimen/medium_size"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_Todo_actual_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="actual_cost"
            android:padding="@dimen/medium_size"
            />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_20sp"
            android:text="Status Info"
            android:textStyle="bold|italic"
            android:paddingStart="@dimen/small_size"
            android:background="#b3b3b3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_20sp"
            android:text="Status"

            android:paddingStart="@dimen/small_size"

            />
        <Spinner
            android:id="@+id/sp_Todo_Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:gravity="center_horizontal"
            >

        </Spinner>

        <Button
            android:id="@+id/btn_todolist_ADD"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_size_20sp"
            android:text="Confirm add document"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="@dimen/small_size"
            android:layout_margin="@dimen/small_size"
            />

    </LinearLayout>
</ScrollView>